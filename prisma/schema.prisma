generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model groups {
  id            Int             @id @default(autoincrement())
  name          String
  shift_id      Int
  created_at    DateTime        @default(now())
  updated_at    DateTime
  shifts        shifts          @relation(fields: [shift_id], references: [id])
  notifications notifications[]
}

model notifications {
  id               Int      @id @default(autoincrement())
  teacher_id       Int
  group_id         Int
  absence_date     DateTime
  hours_discounted Int
  doc_path         String
  created_at       DateTime @default(now())
  updated_at       DateTime
  groups           groups   @relation(fields: [group_id], references: [id])
  teachers         teachers @relation(fields: [teacher_id], references: [id])
}

model shifts {
  id         Int      @id @default(autoincrement())
  name       String
  created_at DateTime @default(now())
  updated_at DateTime
  classes    Int
  groups     groups[]
}

model teachers {
  id            Int             @id @default(autoincrement())
  name          String
  employee_key  String          @unique
  created_at    DateTime        @default(now())
  updated_at    DateTime
  notifications notifications[]
}


model Usuario {
  id_usuario              Int                @id @default(autoincrement())
  num_cuenta              String             @unique
  nip                     String
  @@map("usuario")
}